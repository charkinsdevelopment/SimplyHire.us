@model List<SimplyHireWeb.Models.DbModels.UserSkill>

<h2 class="title is-3">My Skills</h2>

<p>Add your top 5 most marketable skills.</p>
<table class="is-striped table is-fullwidth">
    <thead>
        <tr>
            <th>Skill</th>
            <th>Exp Level</th>
            <th>Years of Exp.</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    @foreach (var skill in Model)
    {
        <tr>
            <td>@skill.SkillName</td>
            <td>@skill.SkillLevel</td>
            <td>@skill.YearsExperience</td>
            <td><a href="#">Edit</a></td>
            <td><a href="#">Delete</a></td>
        </tr>
    }
    @if (Model.Count == 0)
    {
        <tr>
            <td>No Skills Yet. <a class="add-modal-skill" href="#">Click Here to Add Skills</a></td>
        </tr>
    }
</table>
<a class="add-modal-skill button is-primary is-fullwidth" href="#">Add Skills</a>